# Workspace Integration Tool - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration (Optional)
# DATABASE_URL=postgres://username:password@localhost:5432/workspace_integration

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-token-here
SLACK_CHANNEL_ID=C0123456789

# Notion Integration
NOTION_INTEGRATION_SECRET=secret_your_integration_secret
NOTION_PAGE_URL=https://www.notion.so/yourworkspace/Your-Page-abcdef123456

# GitHub App Integration
GITHUB_APP_ID=12345
GITHUB_INSTALLATION_ID=67890
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here
# Note: The private key should be formatted with \n for line breaks if it's a multiline key
GITHUB_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----

# JSON Web Token Secret (Optional)
# JWT_SECRET=your-very-secret-jwt-key